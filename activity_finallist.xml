<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="#87C289"
    android:padding="10dp"
    tools:context=".finallist">


    <TextView
        android:id="@+id/notestitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/words"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recview"
        android:layout_width="401dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addnewnotebtn"
        android:layout_below="@id/notestitle"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="7dp"
        android:background="#FFFFFF" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/addnewnotebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="-1dp"
        android:background="#F9FBFB"
        android:text="add_new_word"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:backgroundTint="#FCFEFE" />


</RelativeLayout>

